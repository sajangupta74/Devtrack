
	
	var device_id;


//getting device data
		$(".device_link").on("click",function(){
			console.log("ck")
			device_id = $(this).attr("data-device-id");
			
			$.ajax(

				{
					url: '/getdevice/'+device_id,

					data: { id: device_id},

					type: "POST",

					datatype: "json",

					success: function( json ) {
						if(json.message == "success")
						{	
							$("#device_name").val(json.data.name);
							$("#device_type").val(json.data.device_type);
							$("#slug").val(json.data.slug);
							$("#responsive").modal("show");
						}
						else
						{
							$("#onfail").text(json.message).addClass("center");
							$("#static").modal("show");
						}
		    		},

		    		error: function(xhr, status, errorThrown) {
		    			console.log("error: " +errorThrown);
				    }
				}
			);
		});

//assinging device to user
	$(".req").on("click", function(){
		$.ajax(

			{
				url: '/assigndevice/'+device_id,

				data: { id: device_id},

				type: "POST",

				datatype: "json",

				success: function( json ) {
					$("#responsive").modal("hide");
					var tag=$("#tag_id_"+device_id).find("span");
					tag.text("Using").addClass("label label-sm label-danger");
					$("#email_id_"+device_id).text("Current User");
					return;
	    		},

	    		error: function(xhr, status, errorThrown) {
	    			console.log("error: "+errorThrown);
			    }
			}
		);
	});
